<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:background="#ffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/txtimagebaimua"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/anhbd"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:padding="2dp"
                    android:background="#03A9F4"
                    android:textColor="@android:color/white"
                    android:id="@+id/txttenbaimua"
                    android:text="Tenbaimua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Noidung"
                        android:textSize="15dp"
                        android:id="@+id/txtnoidung"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:textColor="#BEB5AC"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngaydang"
                            android:textSize="15dp"
                            android:id="@+id/txtngaydang"
                            />
                        <TextView
                            android:textColor="#BEB5AC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diachi"
                            android:textSize="15dp"
                            android:id="@+id/txtdiachi"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>